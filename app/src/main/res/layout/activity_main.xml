<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/itemslogo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="KnowMyItem"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingLeft="20sp"
        android:text="Hello there! Welcome to KnowMyItem App! In here, you will get to know a list of products and their warranties from its categories with just a click!"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_weight="1.5"
            android:gravity="clip_horizontal|center|center_horizontal|left"
            android:padding="20sp"
            android:paddingLeft="20sp"
            android:text="Mobile Phones"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Electrical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1.5"
            android:gravity="clip_horizontal"
            android:padding="20sp"
            android:text="Electrical Products"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp">

        <TextView
            android:id="@+id/Furniture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="1.5"
            android:padding="20sp"
            android:paddingLeft="20sp"
            android:text="Furniture"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Mechanical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1.5"
            android:padding="20sp"
            android:paddingLeft="20sp"
            android:text="Mechanical Products"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/HardWare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_weight="1.5"
            android:padding="20sp"
            android:paddingLeft="20sp"
            android:text="Computer Peripherals"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Desktop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="20sp"
            android:paddingRight="20sp"
            android:text="Computer"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_weight="1.5"
            android:padding="20sp"
            android:paddingLeft="20sp"
            android:text="Television"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="See Your Items"
            app:cornerRadius="10dp" />

        <ToggleButton
            android:id="@+id/Exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:clickable="true"
            android:shadowRadius="10"
            android:text="Exit"
            android:textOff="GoodBye"
            android:textOn="Exit" />


    </LinearLayout>

    <TextView
        android:id="@+id/doneby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done by: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perry Loh Zhi Jie"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/myschool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Republic Polytechnic, Singapore"
        android:textSize="16sp" />

</LinearLayout>

